<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.justplaingoatappsgmail.motoroladroidkeyboardapp.view.activity.EnableKeyboardActivity">

    <TextView
        android:id="@+id/top_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Keyboard Setup"
        android:textSize="25sp" />

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_below="@+id/top_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.itsronald.widget.ViewPagerIndicator
            android:id="@+id/view_pager_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="20dp"
            app:dotRadius="5dp"
            app:selectedDotColor="@color/pinkColor"
            app:unselectedDotColor="@color/colorPrimaryDark"/>

    </android.support.v4.view.ViewPager>

</RelativeLayout>
